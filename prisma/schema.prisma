// schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        Int      @id @default(autoincrement())
  name      String
  price     Decimal 
  rating    Decimal 
  site      String
  link      String
  imageUrl  String
  category  String
  createdAt DateTime @default(now())
  likes Int @default(0)

   @@map("products")

}

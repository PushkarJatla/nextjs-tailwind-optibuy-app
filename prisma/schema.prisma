generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id        Int           @id @default(autoincrement())
  name      String
  price     Decimal
  rating    Decimal
  site      String
  link      String
  imageUrl  String
  category  String
  createdAt DateTime      @default(now())
  likes     Int           @default(0)
  likedBy   ProductLike[]

  @@map("products")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String
    likedProducts ProductLike[]  

  createdAt DateTime @default(now())

  @@map("users")
}

model ProductLike {
  id        Int     @id @default(autoincrement())
  product   Product @relation(fields: [productId], references: [id])
  productId Int
  user      User    @relation(fields: [userId], references: [id])  // âœ… Add this line

  userId    Int
  createdAt DateTime @default(now())

  @@unique([productId, userId])
}